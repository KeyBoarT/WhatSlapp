<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/receive_message_background"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_receive_message"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is receive message"
            android:maxWidth="300sp"
            android:padding="10dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_receive_message"
            android:layout_alignBottom="@id/txt_receive_message"
            android:layout_marginEnd="20dp"
            android:textColor="@color/lightgrey"
            android:text="19.56"/>
    </RelativeLayout>
</RelativeLayout>