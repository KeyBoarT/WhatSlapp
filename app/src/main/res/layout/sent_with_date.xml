<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_sent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/grey"
            android:textColor="@color/lightgrey"
            android:text="10 Haziran 2019"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/txt_sent_date"
            android:background="@drawable/sent_message_background"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sent_message_with_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:textColor="@color/white"
                android:maxWidth="300sp"
                android:padding="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txt_sent_time_with_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txt_sent_message_with_date"
                android:layout_alignBottom="@id/txt_sent_message_with_date"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="17.26"/>

            <ImageView
                android:id="@+id/image_sent_state_with_date"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_done"
                android:layout_toEndOf="@id/txt_sent_time_with_date"
                android:layout_alignBottom="@id/txt_sent_time_with_date"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>